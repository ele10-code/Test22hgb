  {
    "swagger": "2.0",
    "info": {
      "description": "Web services da interrogare tramite API REST  per ottenere informazioni sui post del blog",
      "version": "1.0.0",
      "title": "API del web services"
    },
    "host": "localhost:3001",
    "basePath": "/",
    "tags": [
      {
        "name": "post",
        "description": "Operazioni sui post del blog"
      }
    ],
    "schemes": ["http","https"],
    "paths": {
      "/posts": {
        "get": {
          "tags": ["post"],
          "summary": "Ottieni tutti i post",
          "description": "Restituisce tutti i post del blog",
          "produces": ["application/json"],
          "responses": {
            "200": {
              "description": "Operazione riuscita",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Post"
                }
              }
            },
            "400": {
              "description": "Errore generico"
            },
            "404": {
              "description": "Nessun post trovato"
          },
          "500": {
            "description": "Errore interno del server"
          }
        }
      },
      "/posts-filtered": {
        "get": {
          "tags": ["post"],
          "summary": "Ottieni post filtrati",
          "description": "Restituisce post filtrati per titolo e/o numero di post",
          "parameters": [
            {
              "name": "title",
              "in": "query",
              "required": false,
              "type": "string",
              "description": "Titolo da cercare nei post"
            },
            {
              "name": "items",
              "in": "query",
              "required": false,
              "type": "integer",
              "format": "int64",
              "description": "Numero massimo di post da restituire"
            }
          ],
          "produces": ["application/json"],
          "responses": {
            "200": {
              "description": "Operazione riuscita",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Post"
                }
              }
            },
            "400": {
              "description": "Parametri di richiesta non validi"
            },
            "404": {
              "description": "Nessun post trovato"
            },
            "500": {
              "description": "Errore interno del server"
            }
          }
        }
      }
    },
    "definitions": {
      "Post": {
        "type": "object",
        "required": ["id", "title", "content"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "ID unico del post"
          },
          "title": {
            "type": "object",
            "properties": {
              "rendered": {
                "type": "string",
                "description": "Titolo del post"
              }
            }
          },
          "content": {
            "type": "object",
            "properties": {
              "rendered": {
                "type": "string",
                "description": "Contenuto del post"
              }
            }
          }
        }
      }
    }
  }
  }
